<p id="notice"><%= notice %></p>

<h1>Listing categories</h1>

<table>
	<thead>
		<tr>
			<th>Sub Cat</th>
			<th>Cat</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @sub_categories.each do |sub_category| %>
		<tr>
			<td><%= sub_category.name %></td>
			<td><%= sub_category.category.title %></td>
			<td><%= link_to "delete",category_sub_category_path(params[:category_id], sub_category.id), method: :delete %></td>

		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "create sub_categories", new_category_sub_category_path %>