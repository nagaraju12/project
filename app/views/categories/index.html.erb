<p id="notice"><%= notice %></p>

<h1>Listing categories</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @categories.each do |category| %>
		<tr>
			<td><%= category.title %></td>
			

			<td><%= link_to "delete",category_path(category.id), method: :delete %></td>
		<td><%=  link_to "sub cat",category_sub_categories_path(category.id) %></td>
		<%= link_to 'New Category', new_category_path %>
		</tr>
		<% end %>
	</tbody>
</table>